<div class="block">
  <div class="block-head">
    <div class="d-flex justify-content-between">
      <div class="d-flex">
        <%= render "shared/user_avatar", user: feedback.user %>
        <span class="ms-2">
          <%= feedback.user.full_name %>
        </span>
        <span class="d-none d-md-inline">
          <i class="bi bi-dot"></i>
          <span class="text-muted text-small">
            <%= post.user.email %>
          </span>
        </span>
      </div>
      <div class="d-flex">
        <span title="<%= date_formatter(feedback.created_at) %>" class="text-muted text-small me-2 text-right">Created <%= time_ago_in_words(feedback.created_at) %> ago.</span>
        <% if current_user == feedback.user %>
          <i class="bi bi-three-dots" style="cursor: pointer" data-bs-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
            <li class="dropdown-header text-start">
              <h6>Options</h6>
            </li>

            <%= button_to "Delete", [post, feedback], class: 'dropdown-item',  method: :delete, data: {turbo_confirm: "Are you sure you want to delete this post?"} %>

          </ul>
        <% end %>
      </div>
    </div>

  </div>
  <div class="block-body">

    <%= feedback.content %>
  </div>
</div>
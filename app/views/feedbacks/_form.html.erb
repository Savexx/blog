<%= form_with(model: [post, post.feedbacks.build], id: 'feedback-form') do | f|  %>
  <div class="block p-3 my-4">
    <div class="row g-1">
      <div class="col-12 col-md-6 col-lg-10">

        <%= f.text_field :content,  class: 'form-control', placeholder: 'Give some feedbacks', required: 'true' %>
      </div>
      <div class="col-12 col-md-6 col-lg-2 text-end">
        <button type="submit" form="feedback-form" class="btn bg-custom-primary ms-auto">
          <i class="bi bi-send text-light me-2"></i> Feedback
        </button>
      </div>
    </div>
  </div>
<% end %>